{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "mocha", "chai"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*",
    "./tasks/**/*",
    "./tests/**/*",
    "./deploy/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache",
    "types",
    "coverage"
  ]
}

